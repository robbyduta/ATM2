<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:background="#1100ff"
tools:context="id.sch.smktelkom_mlg.appatm.MainActivity">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="SELAMAT DATANG DI E-BANKING MOKLET"
    android:textColor="#ff0011"
    android:textStyle="bold"
    android:textSize="15dp"
    android:id="@+id/textView2"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="29dp" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Masukkan PIN Anda"
    android:textColor="#ff0011"
    android:textStyle="bold"
    android:textSize="15dp"
    android:id="@+id/textView"
    android:layout_below="@+id/textView2"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="36dp" />
<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:inputType="textPassword"
    android:ems="10"
    android:id="@+id/editpassword"
    android:background="#1ff"
    android:layout_below="@+id/textView"
    android:layout_alignEnd="@+id/textView"
    android:layout_alignStart="@+id/textView" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="1"
    android:id="@+id/btn1"
    android:layout_below="@+id/editpassword"
    android:layout_toStartOf="@+id/btn2" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="2"
    android:id="@+id/btn2"
    android:layout_above="@+id/btn4"
    android:layout_alignStart="@+id/btn0" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="3"
    android:id="@+id/btn3"
    android:layout_above="@+id/btn5"
    android:layout_alignStart="@+id/btnok" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="4"
    android:id="@+id/btn4"
    android:layout_above="@+id/btn8"
    android:layout_alignStart="@+id/btn1" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="5"
    android:id="@+id/btn5"
    android:layout_below="@+id/btn1"
    android:layout_alignStart="@+id/btn2" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="6"
    android:id="@+id/btn6"
    android:layout_alignStart="@+id/btn3"
    android:layout_below="@+id/btn3" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="7"
    android:id="@+id/btn7"
    android:layout_above="@+id/btn0"
    android:layout_toStartOf="@+id/btn8" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="8"
    android:id="@+id/btn8"
    android:layout_centerVertical="true"
    android:layout_alignStart="@+id/btn0" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="9"
    android:id="@+id/btn9"
    android:layout_alignTop="@+id/btn8"
    android:layout_alignStart="@+id/btn6" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Del"
    android:id="@+id/btndel"
    android:layout_alignTop="@+id/btn0"
    android:layout_alignStart="@+id/btn7" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="0"
    android:id="@+id/btn0"
    android:layout_alignTop="@+id/btnok"
    android:layout_centerHorizontal="true" />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Ok"
    android:id="@+id/btnok"
    android:layout_below="@+id/btn8"
    android:layout_toEndOf="@+id/btn8" />
</RelativeLayout>